{
    "manifest_version": 3,
    "name": "Alex",
    "version": "1.0.0",
    "description": "Makes your life easier.",
    "permissions": ["tabs", "debugger", "scripting"],
    "host_permissions": ["https://www.wolvesville.com/*"],
    "content_scripts": [
        {
            "matches": ["https://www.wolvesville.com/*"],
            "js": ["AutoCustom.js"],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["AutoCustom.js"],
            "matches": ["https://www.wolvesville.com/*"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}